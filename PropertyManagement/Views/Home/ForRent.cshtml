

@model IEnumerable<PropertyManagement.Models.ThumbnailBoxViewModel>

@{
    ViewBag.Title = "Home Page";
}

@using (Html.BeginForm("ForRent", "Home", FormMethod.Get))
{

    <br />
    <div class="row">
        <div class="pull-right" style="padding-right:15px;">
            <button type="submit" value="Search" class="btn btn-sm btn-primary">
                <span class="glyphicon glyphicon-search"></span>Search
            </button>
        </div>

        <div class="pull-right">
            @Html.Editor("search", new { htmlAttributes = new { @class = "form-control input-sm" } })
        </div>
        

    </div>









    <br />
}

 @using (Html.BeginForm("ForRent", "Home", FormMethod.Get))
    {
